
@{
    ViewBag.Title = "Admin Login";
}

<section class="login">
    <h3>Login to view the admin page</h3>
    <hr />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">            
            <div class="form-group">
                @Html.Label("Username: ", htmlAttributes: new { @class = "control-label col-md-1" })
                <div class="col-md-10">
                    @Html.Editor("Username", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessage("Username", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Password: ", htmlAttributes: new { @class = "control-label col-md-1" })
                <div class="col-md-10">
                    @Html.Password("Password", "", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessage("Password", new { @class = "text-danger" })
                </div>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Login" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
